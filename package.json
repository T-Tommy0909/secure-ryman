{
  "name": "secure-ryman",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --check ./**/*.{ts,tsx}",
    "format:fix": "prettier --write ./**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "prisma:migrate:dev": "dotenv -e .env.development -- yarn prisma migrate dev"
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "yarn format:fix",
      "bash -c 'yarn run type-check'",
      "eslint --max-warnings 0"
    ]
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "@tanstack/react-query": "^5.40.1",
    "@trpc/client": "11.0.0-rc.390",
    "@trpc/next": "11.0.0-rc.390",
    "@trpc/react-query": "11.0.0-rc.390",
    "@trpc/server": "11.0.0-rc.390",
    "dotenv-cli": "^7.4.2",
    "framer-motion": "^11.2.13",
    "next": "14.2.3",
    "prisma": "^5.14.0",
    "react": "^18",
    "react-dom": "^18",
    "ts-node": "^10.9.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5"
  }
}
